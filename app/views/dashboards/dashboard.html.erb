<% if current_user.stripe_id.present? %>
  <div class="padding-top">
    <div class="well padding-top" style="background-color:#f2f2f2">
      <span style="font-size:3.5em;" class="glyphicon glyphicon-th-list"></span>
        <% plan = get_plan_detail %>
        <div class="form-group col-md-12">
          <div class="row">
            <div class="col-md-6">
              <h2>Package Information</h2>
              Type:<%= plan['nickname'] %><br>
              Price:<%= plan['amount'] %>
            </div>
          </div>
        </div>
    </div>
  </div>
<%end %>

<% if @static_job_search.present? %>
  <div class="padding-top">
    <div class="well padding-top" style="background-color:#f2f2f2">
      <span style="font-size:3.5em;" class="glyphicon glyphicon-th-list"></span>
      <div class="form-group col-md-12">
        <div class="row">
          <div class="widt100">
            <h3>For karriere</h3>
            <div class="form-content-wrap">
              <span>Website: <input class="form-control" value='<%= @static_job_search.website_url %>' disabled/></span><br>
              <span>Designation : <input class="form-control" value='<%= @static_job_search.designation %>' disabled/></span><br>
              <span>Location : <input class="form-control" value='<%= @static_job_search.location %>' disabled/></span><br>
              <% if @static_job_search.present? && !@static_job_search.is_update %>
                <button type="button" job_search_id = '<%= @static_job_search.id %>' value = "static" class="update_job_search btn btn-success" >Update</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

