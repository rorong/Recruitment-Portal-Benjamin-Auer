<script type="text/javascript">
  $(document).on('click', '.update_job_search', function(){
    var job_search_id = $(this).attr('job_search_id');
    var type = $(this).attr('value');
    $.ajax({
      type: 'GET',
      url: '/dashboards/'+ job_search_id +'/find_job_detail',
      data: {job_search_type: type}
    }).done(function (response) {
    });
  })
</script>

